<Window x:Class="Food_DeliveryWPF.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Food_DeliveryWPF"
        mc:Ignorable="d"
        Title="Меню" Height="664" Width="1084" Background="#FF1B1B1B">
    <Grid>
        <Label Content="Рестораны" 
            HorizontalAlignment="Left" 
            Margin="150,145,0,0" 
            VerticalAlignment="Top" 
            FontSize="30" 
            FontWeight="Bold" 
            Foreground="White" FontFamily="Arial Black">
            <!--<Label.Padding>
                <Thickness>10</Thickness>
            </Label.Padding>-->
        </Label>

        <Border BorderThickness="1" Margin="150,194,0,0" Background="#FF61492F" CornerRadius="20" VerticalAlignment="Top" HorizontalAlignment="Left" Height="45" Width="787"></Border>
        <Button x:Name="CategoryFastFood" Content="Фастфуд" Margin="298,204,656,385" FontFamily="Arial Black" FontSize="18" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Click="FastFood_Click"/>
        <Button x:Name="CategoryPizza" Content="Пицца" Margin="438,204,516,385" FontFamily="Arial Black" FontSize="18" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Click="CategoryPizza_Click"/>
        <Button x:Name="AllCategoryes" Content="Все" Margin="163,204,791,385" FontFamily="Arial Black" FontSize="18" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Click="AllCategoryes_Click"/>
        <Button x:Name="CategoryShaurma" Content="Шаурма" Margin="718,204,236,385" FontFamily="Arial Black" FontSize="18" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Click="CategoryShaurma_Click"/>
        <Button x:Name="CategorySushi" Content="Суши" Margin="578,204,376,385" FontFamily="Arial Black" FontSize="18" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Click="CategorySushi_Click"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,270,0,0">
            <WrapPanel x:Name="ShowSellers" Margin="150,0,147,38"/>
        </ScrollViewer>
        <StackPanel x:Name="Header" Margin="0,0,0,0" Background="#FF2D2D2D" Height="100" VerticalAlignment="Top" Orientation="Horizontal">
            <Image Height="50" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Stretch="Fill" MouseLeftButtonDown="Image_MouseLeftButtonDown" Source="/account.png"/>
            <Button Content="Главное меню" Height="24" Width="141" Margin="150,0,0,0" FontFamily="Arial Black" FontSize="16" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Click="Button_Click"/>
            <Button Content="Заказы" Height="25" Width="130" Margin="50,0,0,0" FontFamily="Arial Black" FontSize="16" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Click="Button_Click_1"/>
            <Image Height="80" Width="80" Margin="455,0,0,0" Source="/corzina.png" MouseLeftButtonDown="Image_MouseLeftButtonDown_1"/>
        </StackPanel>
        <Border x:Name="AdminBorder" BorderThickness="1" Margin="488,100,0,0" Background="#FF7F0000" CornerRadius="5" VerticalAlignment="Top" HorizontalAlignment="Left" Height="40" Width="596"/>
        <Button x:Name="AdminUsers" BorderThickness="0,0,0,0" Content="Пользователи" Height="40" Margin="503,100,424,0" FontFamily="Arial Black" FontSize="16" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Click="AdminUsers_Click"/>
        <Button x:Name="AdminFoods" Content="Блюда" Height="40" Margin="665,100,283,0" FontFamily="Arial Black" FontSize="16" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Click="AdminFoods_Click"/>
        <Button x:Name="AdminSellers" Content="Продавцы" Height="40" Margin="807,100,141,0" FontFamily="Arial Black" FontSize="16" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Click="AdminSellers_Click"/>
        <Button x:Name="AdminCategoryes" Content="Категории" Height="40" Margin="948,100,0,0" FontFamily="Arial Black" FontSize="16" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Click="AdminCategoryes_Click"/>
    </Grid>
</Window>
